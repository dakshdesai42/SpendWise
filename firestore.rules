rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /expenses/{expenseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /recurringExpenses/{recurringId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /recurringSkips/{skipId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /monthlySummaries/{month} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /budgets/{budgetId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /goals/{goalId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Bank connections: client can read (frontend fetches these), only backend writes
      match /bankConnections/{connectionId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      // Plaid tokens: NEVER accessible from client. Only Admin SDK (Cloud Functions) can access.
      match /plaidTokens/{tokenId} {
        allow read, write: if false;
      }
    }
  }
}
